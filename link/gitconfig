[alias]
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	l = log --pretty=format:'%C(yellow)%h%C(white) %an <%ae> %>|(80)%ai%Creset%n%C(bold)%w(0,4,4)%s%C(reset)%n%+b'
	ll = log --stat
	lg = log
	lp = log -p
	rb5 = rebase -i origin
	lg5 = log origin..
	amend = commit --amend --no-edit
	sync = pull --rebase origin master
	review = push origin HEAD:refs/for/master
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[merge]
	tool = meld
[mergetool]
	prompt = false
	keepBackup = false
[diff]
	renames = true
	tool = vimdiff
	command = difftool --dir-diff
	patience = true
[push]
	default = simple
[color]
	ui = true
[include]
	path = ~/.gitconfig_local
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
[http]
	cookiefile = /home/achew22/.gitcookies
[diff "image"]
	command = ~/.bin/git-imagediff
